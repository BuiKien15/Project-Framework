@model IEnumerable<QuanLyBanHang.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}

<div class="col-lg-10 m-auto">
    <div class="card">
        <div class="card-body">
            
            <h2 class="mb-4">Lịch sử mua hàng</h2>

            <table id="table-inventories" class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Order Date
                        </th>
                        <th>
                            Total Amount
                        </th>
                        <th>
                            Shipping Address
                        </th>
                        <th>
                            Payment Method
                        </th>
                        <th>
                            Order Status
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentMethod)
                            </td>
                            <td>
                                @if (item.Status == "Processing")
                                {
                                    <span style="color: yellow;">@item.Status</span>
                                }
                                else if (item.Status == "Shipping")
                                {
                                    <span style="color: green;">@item.Status</span>
                                }
                                else if (item.Status == "Completed")
                                {
                                    <span style="color: blue;">@item.Status</span>
                                }
                                else if (item.Status == "Canceled")
                                {
                                    <span style="color: red;">@item.Status</span>
                                }
                            </td>
                            <td>
                                <a type="button" class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.OrderId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


