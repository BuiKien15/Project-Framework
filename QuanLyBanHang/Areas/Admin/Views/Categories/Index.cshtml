@model IEnumerable<QuanLyBanHang.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int counter = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
        <h2 class="mb-4">Categories table</h2>

        @if (ViewBag.SuccessMessage != null)
        {
            <div id="successMessage" class="alert alert-success">Source Action @ViewBag.SourceAction : @ViewBag.SuccessMessage</div>

            <script>
                // Tự động ẩn thông báo thành công sau 3 giây
                setTimeout(function () {
                    var successMessage = document.getElementById('successMessage');
                    if (successMessage) {
                        successMessage.style.display = 'none';
                    }
                }, 3000);
            </script>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div id="errorMessage" class="alert alert-danger">Source Action @ViewBag.SourceAction : @ViewBag.ErrorMessage</div>

            <script>
                // Tự động ẩn thông báo lỗi sau 3 giây
                setTimeout(function () {
                    var errorMessage = document.getElementById('errorMessage');
                    if (errorMessage) {
                        errorMessage.style.display = 'none';
                    }
                }, 3000);
            </script>
        }

        <a asp-action="Create" type="button" class="btn mb-5 btn-gradient-primary btn-fw">Create New</a>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th> # </th>
                <th>Category Name</th>
                <th>Product Count</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@counter</td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @item.ProductCount
                </td>
                <td>
                    <div class="d-flex align-items-center justify-content-center">
                        <a type="button" class="btn btn-sm btn-gradient-info" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                        <a type="button" class="btn btn-sm btn-gradient-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </div>
                </td>
            </tr>

            counter++;
}
            </tbody>
        </table>
        </div>
    </div>
</div>

