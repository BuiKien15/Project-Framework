@model IEnumerable<QuanLyBanHang.Models.Inventory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="mb-4">Inventories table</h2>

            <table id="table-inventories" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Category
                        </th>

                        <th>
                            Product Name
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Category.CategoryName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Product.ProductName)
                            </td>

                            <td>
                                @if (item.Quantity == 0)
                                {
                                    <span style="color: red;">Out of stock</span>
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>